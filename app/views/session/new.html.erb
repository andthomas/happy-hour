<div class="timeContainer">
<h2>Login</h2>

<% if flash[:error].present? %>
  <p><strong> <%= flash[:error] %> </strong></p>
<% end %>

<%= form_tag login_path do %>

  <br><%= label_tag 'Email' %>
  <%= email_field_tag :email, nil %><br>

  <%= label_tag 'Password' %>
  <%= password_field_tag :password, nil %><br><br>

  <%= submit_tag 'Login' %>

<%end%>
</div>
